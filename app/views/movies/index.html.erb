<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th>
      <th>Rating</th>
      <th>Current Viewings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>


      <tr>
        <td><%= image_tag movie.avatar_url(:thumb).to_s %></td>
        <td><%= movie.name %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.currentviewings %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<footer><%= link_to 'Home Page', root_path %></footer>
<footer><%= link_to 'New Movie', new_movie_path %></footer>
<footer><%= link_to 'Theater Page', '/theaters' %></footer>
